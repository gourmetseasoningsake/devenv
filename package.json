{
  "name": "starter-hybrids-tailwind",
  "version": "0.1.0",
  "description": "simple setup for hybridsjs, tailwindcss and rescript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gourmetseasoningsake/starter-hybrids-tailwind.git"
  },
  "keywords": [
    "hybrids",
    "tailwind",
    "rescript",
    "vite",
    "starter"
  ],
  "author": "gourmetseasoningsake",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gourmetseasoningsake/starter-hybrids-tailwind/issues"
  },
  "homepage": "https://github.com/gourmetseasoningsake/starter-hybrids-tailwind#readme",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "db": "node ./json-server/server.js",
    "test2": "node ./tasks/test.js test",
    "test": "concurrently 'pnpm db test' 'wait-on tcp:3001 && ava --config ./ava/config.js'",
    "test:page": "concurrently 'pnpm db test' 'wait-on tcp:3001 && ava --config ./ava/config.js ./src/index.spec.js'",
    "test:cov": "c8 --config ./c8.config.json ava --config ./ava/config.js",
    "dev:re": "rescript build -w",
    "build:re": "rescript",
    "dev": "concurrently 'pnpm db development' 'wait-on tcp:3001 && vite'",
    "build": "vite build --mode test",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build",
    "preview": "pnpm build:staging && vite preview --mode staging",
    "preview:prod": "pnpm build:prod && vite preview"
  },
  "devDependencies": {
    "@jihchi/vite-plugin-rescript": "^2.0.2",
    "autoprefixer": "^10.4.0",
    "ava": "^4.0.1",
    "c8": "^7.11.0",
    "concurrently": "^7.0.0",
    "execa": "^6.1.0",
    "jsdom": "^19.0.0",
    "json-server": "^0.17.0",
    "liquidjs": "^9.32.0",
    "postcss": "^8.4.5",
    "puppeteer": "^13.1.3",
    "rescript": "^9.1.4",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "sinon": "^12.0.1",
    "tailwindcss": "^3.0.5",
    "vite": "^2.7.8",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@ryyppy/rescript-promise": "^2.1.0",
    "hybrids": "^7.0.5"
  }
}
